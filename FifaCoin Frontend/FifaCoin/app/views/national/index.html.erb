<% names = Array.new %>
<% coins = Array.new %>
<% officials = Array.new %>
<% id = Array.new %>
<% @nationals.each do |national| %>
    <% a= link_to national.name, national %>
    <% names.push(a) %>
    <% b = national.num_coins %>
    <% coins.push(b) %>
    <% officials.push(national.OfficialName) %>
    <% id.push(national.id) %>
<h1 style="text-align: center">
  National Level
</h1>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Country Name</th>
    <th scope="col">Officials Name</th>
    <th scope="col">Number of FifaCoins</th>
    <th scope="col">Send FifaCoins</th>
  </tr>
  </thead>
  <tbody>
  <% i = 0 %>
  <% while i < names.length %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= names.shift %></td>
        <td><%= officials.shift %></td>
        <td><%= coins.shift %></td>
        <td>
          <% cur_id = id.shift %>
          <% if fifa_signed_in? %>
            <%= link_to "Send Tokens", new_add_national_path(cur_id), class: 'btn btn-primary' %>
          <% else %>
              <p>You do not have permission to send tokens</p>
          <% end %>
        </td>
      </tr>
      <% i += 1 %>
  <% end %>
  </tbody>
</table>
<% end %>
